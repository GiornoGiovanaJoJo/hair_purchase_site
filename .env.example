# ==========================================
# Django Settings
# ==========================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate new key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION-xyz123

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Allowed hosts (separate with commas)
# In production, add your domain: ALLOWED_HOSTS=your-domain.com,www.your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# Database
# ==========================================

# For development (SQLite - default):
# DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/hair_db

# ==========================================
# Yandex Metrika
# ==========================================

# Your Yandex Metrika counter ID
YANDEX_METRIKA_ID=

# ==========================================
# Email Configuration
# ==========================================

# For development (console output):
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production (SMTP):
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@hair-purchase.ru
ADMIN_EMAIL=admin@hair-purchase.ru

# ==========================================
# CORS (Cross-Origin Resource Sharing)
# ==========================================

# WARNING: Set to False in production and configure CORS_ALLOWED_ORIGINS
CORS_ALLOW_ALL=True

# For production, use:
# CORS_ALLOW_ALL=False
# CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

