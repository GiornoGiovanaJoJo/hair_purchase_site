########################################
# Django Settings
########################################

# Для разработки можно оставить DEBUG=True, для продакшена ОБЯЗАТЕЛЬНО False
DEBUG=True

# Для локальной разработки
ALLOWED_HOSTS=localhost,127.0.0.1

# В продакшене замените на:
# ALLOWED_HOSTS=195.161.69.221,4895c9d9450e.vps.myjino.ru,example.com,www.example.com

# Секретный ключ Django. В реальном .env сгенерируйте новый:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION-xyz123


########################################
# Database (по умолчанию SQLite, для продакшена можно использовать PostgreSQL)
########################################

# Для SQLite можно не указывать DATABASE_URL и использовать настройки по умолчанию.
# Для PostgreSQL (пример):
# DATABASE_URL=postgresql://hair_user:hair_password@db:5432/hair_db

DATABASE_URL=


########################################
# Static & Media
########################################

# Базовый URL для статики и медиа (чаще всего можно оставить пустым)
STATIC_URL=/static/
MEDIA_URL=/media/


########################################
# Yandex Metrika
########################################

# ID счетчика Яндекс.Метрики (если используется)
YANDEX_METRIKA_ID=


########################################
# Email Configuration
########################################

# Для разработки: вывод писем в консоль
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Для реальной отправки писем через Yandex SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True

DEFAULT_FROM_EMAIL=noreply@hair-purchase.ru
ADMIN_EMAIL=admin@hair-purchase.ru


########################################
# CORS
########################################

# Для локальной разработки
CORS_ALLOW_ALL=True

# В продакшене лучше настроить точный список доменов и отключить CORS_ALLOW_ALL
# CORS_ALLOW_ALL=False


########################################
# Telegram Bot
########################################

# ВАЖНО: в реальном .env указывать реальный токен бота.
# В .env.example – только заглушка.
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# ID чата администратора (можно получить в @userinfobot)
TELEGRAM_ADMIN_CHAT_ID=YOUR_ADMIN_CHAT_ID_HERE

# ID главного администратора (если используется логика главного админа)
TELEGRAM_MAIN_ADMIN_ID=0

# Использовать ли webhook вместо long polling
TELEGRAM_USE_WEBHOOK=False

# Полный URL вебхука (если TELEGRAM_USE_WEBHOOK=True)
TELEGRAM_WEBHOOK_URL=

# Путь, по которому Django принимает webhook (например, /telegram/webhook/)
TELEGRAM_WEBHOOK_PATH=/telegram/webhook


